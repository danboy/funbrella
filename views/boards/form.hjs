<form action="/boards{{#board}}/update{{/board}}" method="post">
  <fieldset>
    <div class="text">
      <label for="name">Name</label>
      <input name="name" id="name" value="{{board.name}}" />
      {{#board}}
        <input name="id" value="{{id}}" type="hidden" />
      {{/board}}
    </div>
    <div class="submit">
      <input type="submit" class="button" id="submit" value="create a new board"/>
    </div>
  </fieldset>
</form>
