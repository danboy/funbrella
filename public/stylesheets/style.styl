@import url(http://fonts.googleapis.com/css?family=Roboto:300,100,100italic,300italic,900,900italic);
border-color = #FFF;
border-width = 2px;
border-active = #38c0f4;

background =  #F60;
background-one = #00F;
background-two = #800080;
background-three = #D40000;
background-four = #FF0;

background-one = #E9E9E9;
background-two = #EEE;
background-three = #E3E3E3;
background-four = #EFEFEF;
@font-face {
  font-family: 'Climacons-Font';
  src:url('fonts/climacons-webfont.eot');
  src:url('fonts/climacons-webfont.eot?#iefix') format('embedded-opentype'),
  url('fonts/climacons-webfont.svg#Climacons-Font') format('svg'),
  url('fonts/climacons-webfont.woff') format('woff'),
  url('fonts/climacons-webfont.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: 'Funbrella';
  src:url('fonts/funbrella.otf');
}

body{
  padding: 0;
  margin: 0;
  font: 100% "Roboto", Helvetica, Arial, sans-serif;
  font-weight: 100;
  font-size: 3vh;
  scroll: none !important;
  background: #FFF;
}
a{
  color: #666
}

h1,h2,h3,h4,h5{
  font-weight: 300;
}

li{
  list-style: none;
  margin: 0;
  padding: 0;
}
fieldset{
  border: 0 none;
}
label{
  min-width: 25%;
  display: inline-block;
  font-size: 110%;
  clear: both;
}
input{
  display: block;
  clear: both;
  border: 1px solid #CCC;
  line-height: 2em;
  height: 2em;
  margin: 0 0 1em;
  padding: 0 1em;
}
menu{
  margin: 0;
  padding: 0;
}
.message-board{
  position: relative;
  padding: 1%;
  display: block;
  float: left;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  vertical-align: top;
  background: #FFF;
  color: #555;
  overflow: hidden;
  border: border-width solid border-color;
  width: 50%;
  min-height: 100%vh;
  max-height: 100%vh;
  background: #FFF;
  color: #777;
}
.widget{
  position: relative;
  width: 25%;
  min-height: 50%vh;
  max-height: 50%vh;
  padding: 1%;
  display: block;
  float: left;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  vertical-align: top;
  background: #FFF;
  color: #555;
  overflow: hidden;
  border: border-width solid border-color;
  &:nth-child(5n+2){
    background: background-one;
    color: #444;
    border-left: 0 none;
    border-right: 0 none;
    border-bottom: 0 none;
  }
  &:nth-child(5n+3){
    background: background-two;
    color: #666;
    border-bottom: 0 none;
  }
  &:nth-child(5n+4){
    background: background-three;
    color: #555;
    border-left: 0 none;
    border-right: 0 none;
  }
  &:nth-child(5n+5){
    background: background-four;
    color: #777;
  }
  &:hover .prefs-button{
    display: inline-block;
  }
  .prefs{
    display: none;
    position: absolute;
    top: 10px;
    margin: 0 auto;
    padding: 10px;
    background: #EEE;
    border: border-width solid #AAA;
    width: 80%;
    height: 40vh;
    overflow: auto;
    input{
      clear: both;
    }
  }
}
.settings-menu{
  font-family: 'Funbrella';
  position: absolute;
  top: 0;
  left:0;
  width: 10vh;
  height: auto;
  z-index: 9999;
  background: #333;
  color: #fff;
  font-size: 300%;
  line-height: 10vh;
  text-align: center;
  opacity: 0;
}
.settings-menu:hover{
  opacity: 1;
}
.message-list{
  margin: 0;
  padding: 0;
  strong{
    vertical-align: top;
  }
  img{
    border: .5em solid #eee;
    border-bottom-width: 1em;
  }
  li{
    background: #fff;
    border-bottom: 4px solid #EEE;
    padding: .5em;
  }
}
#message{
  opacity: 0;
  overflow: hidden;
  width: 25%vw;
  height: 2%vh;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -12%;
  border: border-width solid border-color;
  textarea{
    display: block;
    margin: 10px auto;
    width: 24%vw;
    height: 15%vh;
  }
  label{
    font-size: 75%;
    width: auto;
    margin-left: 10px;
  }
  input{
    margin: 0 5px;
    display: inline-block;
    width: 20px;
  }
  .btn{
    position: absolute;
    bottom: 5px;
    right: 5px;
    background: #999;
    border: 1px #333 solid;
    color: #333;
    padding: 0 5px;
  }
  -webkit-transition: opacity 2s;
}
#message:hover{
  opacity: 1;
  height: 30%vh;
  -webkit-transition: opacity 2s;
}
#audio{
  width: 30px;
  height: 30px;
  opacity: 0;
  position: absolute;
  right: 0;
  bottom: 0;
}
.widget-view .widget{
  width: 100%vw;
  min-height: 100%vh;
}
#watchers{
  display: none;
}
#watchers.watcher-show{
  display: block;
  z-index: 999999;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #333;
  opacity: .9;
}

#settings{
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  background: #333;
  color: #EEE;
  opacity: .8;
}
.settings-board{
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}
.settings-item{
  display: block;
  float: left;
}
.settings-message-board{
  width: 50vw;
  height: 100vh;
}
.settings-widget{
  width: 25vw;
  height: 50vh;
  &:nth-child(5n+2){
    background: #444;
  }
  &:nth-child(5n+3){
    background: #222;
  }
  &:nth-child(5n+4){
    background: #343434;
  }
}
.settings-widget h1{
  text-align: center;
}
.button{
  display: inline-block;
  width: auto;
  height: 30px;
  line-height: 30px;
  padding: 0 0 0 .5%;
  background: #666;
  text-align: center;
  color: #999;
  font-weight: bold;
  border: 1px solid #555;
  border-radius: 3px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}
.button.enabled{
  padding: 0 0 0 .5%;
}
.button:after{
  display: inline-block;
  content: 'off'
  padding: 0 1%;
  margin: 0 0 0 3px;
  background: #900;
  width: 30px;
  height: 28px;
  border-radius: 3px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}
.button.enabled:after{
  content: '';
  display: none;
}
.button.enabled:before{
  display: inline-block;
  content: 'on'
  padding: 0 1%;
  margin: 0 0 0 3px;
  background: #8A0;
  color: #FFF;
  width: 30px;
  height: 28px;
  border-radius: 3px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}

.widget-list{
  margin: 0;
  padding: 0;
  height: 25vh;
  overflow: auto;
}
.widget-list-item{
  margin: 1%;
  display: block;
  float: left;
  background: #000;
  width: 14%;
  height: 14vh;
  font-size: 40%;
  text-align: center;
  color: #fff;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}
.settings-list{
  margin: 0;
  padding: 0;
  height: 75vh;
  overflow: auto;
}
