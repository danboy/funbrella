@import url(http://fonts.googleapis.com/css?family=Roboto:300,100,100italic,300italic,900,900italic);
border-color = #eee;
border-width = 2px;

background-one = #ADBBD9;
background-two = #D5EDCC;
background-three = #E6CE9C;
background-four = #D9ADAE;
@font-face {
  font-family: 'Climacons-Font';
  src:url('fonts/climacons-webfont.eot');
  src:url('fonts/climacons-webfont.eot?#iefix') format('embedded-opentype'),
  url('fonts/climacons-webfont.svg#Climacons-Font') format('svg'),
  url('fonts/climacons-webfont.woff') format('woff'),
  url('fonts/climacons-webfont.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

body{
  padding: 0;
  margin: 0;
  font: 100% "Roboto", Helvetica, Arial, sans-serif;
  font-weight: 100;
  scroll: none;
  background: #999;
}
a{
  color: #666
}

h1,h2,h3,h4,h5{
  font-weight: 300;
}

li{
  list-style: none;
  margin: 0;
  padding: 0;
}
label{
  min-width: 35%;
  display: inline-block;
}
input{
  border: 1px solid #CCC;
  line-height: 2em;
  height: 2em;
  padding: 0 1em;
}
menu{
  margin: 0;
  padding: 0;
}
.widget{
  position: relative;
  width: 25%;
  min-height: 50%vh;
  max-height: 50%vh;
  padding: 1%;
  display: block;
  float: left;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  vertical-align: top;
  background: #EEE;
  color: #555;
  overflow: hidden;
  border: border-width solid border-color;
  &:first-child{
    width: 50%;
    min-height: 100%vh;
    max-height: 100%vh;
    background: #EEE;
    color: #777;
  }
  &:nth-child(5n+2){
    background: background-one;
    color: #444;
    border-left: 0 none;
    border-right: 0 none;
    border-bottom: 0 none;
  }
  &:nth-child(5n+3){
    background: background-two;
    color: #666;
    border-bottom: 0 none;
  }
  &:nth-child(5n+4){
    background: background-three;
    color: #555;
    border-left: 0 none;
    border-right: 0 none;
  }
  &:nth-child(5n+5){
    background: background-four;
    color: #777;
  }
  .prefs-button{
    display: none;
    position: absolute;
    top: 10px;
    right: 10px;
  }
  &:hover .prefs-button{
    display: block;
  }
  .prefs{
    display: none;
    position: absolute;
    top: 10px;
    margin: 0 auto;
    padding: 10px;
    background: #EEE;
    border: border-width solid #AAA;
    width: 80%;
    input{
      clear: both;
    }
  }
}
.widget-prefs{
  display: none;
  margin: 2%;
  padding: 2%;
  position: absolute;
  top: 2%;
  background: #EEE;
  border: 4px solid #CCC;
  margin: 0 auto;
  min-width: 92%;
  -webkit-box-sizing: border-box;
}
.message-list{
  strong{
    vertical-align: top;
  }
  img{
    border: .5em solid #eee;
    border-bottom-width: 1em;
  }
  li{
    background: #fff;
    border-bottom: 8px solid #EEE;
    padding: .5em;
  }
}
