@import url(http://fonts.googleapis.com/css?family=Roboto:300,100,100italic,300italic,900,900italic);
@font-face {
  font-family:'ClimaconsRegular';
  src: url('fonts/Climacons.eot');
  src: url('fonts/Climacons.eot?#iefix') format('embedded-opentype'),
       url('fonts/Climacons.woff') format('woff'),
       url('fonts/Climacons.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

body{
  padding: 0;
  margin: 0;
  font: 100% "Roboto", Helvetica, Arial, sans-serif;
  font-weight: 100;
  scroll: none;
  background: #999;
}
a{
  color: #666
}

h1,h2,h3,h4,h5{
  font-weight: 300;
}

.widget{
  width: 25%;
  min-height: 50%vh;
  max-height: 50%vh;
  padding: 1%;
  display: block;
  float: left;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  vertical-align: top;
  background: #999;
  color: #555;
  overflow: hidden;
  &:first-child{
    width: 50%;
    min-height: 100%vh;
    max-height: 100%vh;
  }
  &:nth-child(5n+1){
    background: #BBB;
    color: #777;
  }
  &:nth-child(5n+2){
    background: #777;
    color: #444;
  }
  &:nth-child(5n+3){
    background: #AAA;
    color: #666;
  }
  &:nth-child(5n+4){
    background: #888;
    color: #555;
  }
  &:nth-child(5n+5){
    background: #BBB;
    color: #777;
  }
}
